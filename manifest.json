{
  "manifest_version": 2,
  "name": "Save Code",
  "version": "1.4",
  "description": "Saves the Question and code in the browser page.",
  "permissions": ["downloads", "contextMenus", "tabs", "storage", "activeTab"],
  "browser_action": {
    "default_icon": {
      "16": "/images/icon.png",
      "32": "/images/icon.png",
      "48": "/images/icon.png",
      "128": "/images/icon.png"
    }
  },
  "icons": {
    "16": "/images/icon.png",
    "32": "/images/icon.png",
    "48": "/images/icon.png",
    "128": "/images/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
